{
  "accept_license": true,
  "install_type": "custom",
  "install_dir": "/opt/myapp",
  "components": [
    "core",
    "docs",
    "examples",
    "plugins"
  ],
  "options": {
    "desktop_shortcut": true,
    "start_menu": true,
    "add_to_path": true,
    "file_associations": true
  },
  "service": {
    "enabled": true,
    "name": "myapp-service",
    "auto_start": true,
    "user": "myapp",
    "description": "MyApp Background Service"
  },
  "database": {
    "type": "postgresql",
    "host": "localhost",
    "port": 5432,
    "name": "myapp_db",
    "user": "myapp_user",
    "create_database": true
  },
  "network": {
    "api_port": 8080,
    "web_port": 3000,
    "enable_ssl": true,
    "ssl_cert": "/etc/ssl/certs/myapp.crt",
    "ssl_key": "/etc/ssl/private/myapp.key"
  },
  "logging": {
    "enabled": true,
    "level": "info",
    "directory": "/var/log/myapp",
    "max_size": "100MB",
    "max_files": 10,
    "compress": true
  },
  "advanced": {
    "create_backup": true,
    "verify_installation": true,
    "cleanup_temp_files": true,
    "parallel_downloads": 4,
    "retry_on_failure": true,
    "max_retries": 3
  },
  "post_install": {
    "launch_after_install": false,
    "open_documentation": false,
    "register_product": false,
    "run_commands": [
      "systemctl enable myapp",
      "systemctl start myapp"
    ]
  },
  "environment": {
    "MYAPP_HOME": "${install_dir}",
    "MYAPP_CONFIG": "${install_dir}/config",
    "MYAPP_DATA": "/var/lib/myapp"
  },
  "confirm_install": true
}
